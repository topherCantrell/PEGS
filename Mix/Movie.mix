SEQUENCE {

VOICE0

  REGISTER 0,7,0xFE
  REGISTER 1,7,0xFF
  REGISTER 0,8,1

  STACCATO 90%
  TEMPO 40.0
  C4 D E F G A B C+ B- A G F E D C 

VOICE6
  STACCATO 90%
  TEMPO 40.0
  VARSET 0,0
  VARSET 1,128 
  R
  VARSET 0,1
